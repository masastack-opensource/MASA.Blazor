@inherits LayoutComponentBase
@layout BaseLayout

<MNavigationDrawer Fixed Floating Width="270" Top="80" Class="pl-5 pb-6">
    <ChildContent>
        <NavMenu @key="NavigationManager.Uri"></NavMenu>
        <div class="pt-12"></div>
    </ChildContent>
</MNavigationDrawer>

<MMain Style="padding:0; margin: 80px 329px 0 270px; background:#fff;">
    <MContainer Class="pa-4 pa-sm-6 pa-md-8" Fluid>
        <ErrorBoundary @ref="_errorBoundary">
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent>
                <Error></Error>
            </ErrorContent>
        </ErrorBoundary>
    </MContainer>
</MMain>

<MNavigationDrawer Clipped Fixed Floating Right Top="80" Width="329" Class="default-toc py-4">
    <PrependContent>
        <div class="mb-2 text-h6 font-weight-medium text--primary ml-6" path="contents">目录</div>
    </PrependContent>
    <ChildContent>
        <Contents></Contents>
        <div class="pt-4 pb-3 ml-6">
            <div class="ml-2 mb-3 text-caption font-weight-regular text--secondary" path="premiere-sponsors">高级赞助商</div>
            <MCard Tag="a" Ripple="false" Tile Class="d-inline-block px-2 py-1 transparent" Flat Link Style="box-shadow:none!important">
                <MImage Contain Class="d-inline-block" MaxHeight="64" Width="180" Src="https://cdn.masastack.com/stack/images/website/masa-blazor/lsd-logo.png"></MImage>
            </MCard>
        </div>
    </ChildContent>
</MNavigationDrawer>